@model IEnumerable<EmployeeDetails.Models.Employee>

@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<h1>Employee List</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("No")
            </th>
            <th>
                @Html.DisplayName("EmpId")
            </th>
            <th>
                @Html.DisplayName("First Name")
            </th>
            <th>
                @Html.DisplayName("Last Name")
            </th>
            <th>
                @Html.DisplayName("Phone Number")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Salary")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @count
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phonenumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                    <a href="@Url.Action("Create", "Employee", new { id = item.EmpId })" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a href="@Url.Action("Details", "Employee", new { id = item.EmpId })" class="btn btn-primary"><i class="fa-solid fa-eye"></i></a>
                    <a href="@Url.Action("Delete", "Employee", new { id = item.EmpId })" class="btn btn-danger"> <i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
            count++;
}
    </tbody>
</table>
